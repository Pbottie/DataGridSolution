    [TestMethod]
    public void GridItemSetsFieldCorrectly()
    {
        var cut = Render(
    @<DataGrid Items="testData" class="table-striped">
        <GridItem Title="Testing" />
    </DataGrid>
    );
        var gridItem = cut.FindComponent<GridItem<SearchMeasurementListItem>>().Instance;
